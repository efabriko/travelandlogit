<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="date">Date:</label>
        <input type="date" class="form-control" id="articleDate" name="articleDate" value="">
    </div>

    <div class="form-group">
      <label for="articleTitle">Article Title:</label>
      <input type="text" class="form-control" id="articleTitle" name="articleTitle" value="">
    </div>

    <div class="form-group">
        <label for="articleTitle">Article Content:</label>
        <textarea class="form-control" id="articleContent" rows="3" name="articleContent" value=""></textarea>
    </div>

    <div class="form-group">
        <label for="articleTitle">Point of Interest #1:</label>
        <div class="form-inline">
            <label class="sr-only" for="gpsDataPoi1">GPS data POI #1</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="gpsDataPoi1" name="gpsDataPoi1" placeholder="GPS data POI #1 (lat., long.)">
     
            <label class="sr-only" for="timeForPoi1">Time for POI #1</label>
            <input type="time" class="form-control mb-2 mr-sm-2" id="timeOfPoi1" name="timeOfPoi1" placeholder="Time of POI #1">
     
            <label class="sr-only" for="nameOfPoi1">Name of POI #1</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="nameOfPoi1" name="nameOfPoi1" placeholder="Name of the POI #1">
        </div>
  
        <label for="articleTitle">Point of Interest #2:</label>
        <div class="form-inline">
            <label class="sr-only" for="gpsDataPoi1">GPS data POI #2</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="gpsDataPoi2" name="gpsDataPoi2" placeholder="GPS data POI #2 (lat., long.)">
     
            <label class="sr-only" for="timeForPoi1">Time for POI #2</label>
            <input type="time" class="form-control mb-2 mr-sm-2" id="timeOfPoi2" name="timeOfPoi2" placeholder="Time of POI #2">
     
            <label class="sr-only" for="nameOfPoi1">Name of POI #2</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="nameOfPoi2" name="nameOfPoi2" placeholder="Name of the POI #2">
        </div>
    </div>

    <input type="submit" class="btn btn-primary" name="button" value="Publish">
</form>


<%- include("partials/footer"); -%>